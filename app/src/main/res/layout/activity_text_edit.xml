<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.orangesoda.Ui.TextEditActivity">
    <include layout="@layout/titlebar"
        android:id="@+id/include3" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include3">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp">



                <android.support.design.widget.TextInputEditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:id="@+id/text_edit_title"
                    android:hint="标题"
                    android:maxLength="16" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/text_edit_content"
                    android:background="@null"
                    android:hint="文本内容" />
            </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textInputLayout"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray" />

        <com.ogaclejapan.arclayout.ArcLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="73dp"
            app:arc_axisRadius="120dp"
            app:arc_color="#4D000000"
            app:arc_freeAngle="false"
            app:arc_origin="bottom"
            app:arc_radius="168dp"
            app:arc_reverseAngle="false">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#03A9F4"
                android:gravity="center"
                android:text="A"
                android:textColor="#FFFFFF"
                app:arc_origin="center" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00BCD4"
                android:gravity="center"
                android:text="B"
                android:textColor="#FFFFFF"
                app:arc_origin="center" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#009688"
                android:gravity="center"
                android:text="C"
                android:textColor="#FFFFFF"
                app:arc_origin="center" />

        </com.ogaclejapan.arclayout.ArcLayout>

    </RelativeLayout>

</RelativeLayout>
